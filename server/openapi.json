{
  "openapi": "3.0.0",
  "info": {
    "title": "Twitter Clone API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.twitterclone.com/"
    }
  ],
  "paths": {
    "/public/timeline": {
      "get": {
        "summary": "Get public timeline tweets",
        "responses": {
          "200": {
            "description": "A list of tweets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TweetEntity"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/private/tweets": {
      "get": {
        "summary": "Get user's tweets",
        "responses": {
          "200": {
            "description": "A list of user's tweets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TweetEntity"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new tweet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewTweetEntity"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tweet created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TweetEntity"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TweetEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "userId",
          "text",
          "createdAt"
        ]
      },
      "NewTweetEntity": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "maxLength": 140
          }
        },
        "required": [
          "text"
        ]
      },
      "UserEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "photoURL": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    }
  }
}